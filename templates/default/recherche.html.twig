<section id="recherche" class="py-5 shadow-lg rounded">
    <div class="container">
        <h2 class="text-center mb-4 text">Rechercher covoiturage</h2>

        <form id="formRecherche" class="mb-4 text-center">
            <input type="text" id="depart" name="depart" placeholder="Départ" required>
            <input type="text" id="arrivee" name="arrivee" placeholder="Arrivée" required>
            <input type="date" id="date" name="date" required>
            <button type="submit" class="btn btn-success">Rechercher</button>
        </form>

        <div id="loadingSpinner" class="text-center d-none">
            <div class="spinner-border text-success" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>

        <div id="resultatsTrajets" class="mt-4"></div>
    </div>
</section>
