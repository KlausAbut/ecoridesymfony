{% extends 'base.html.twig' %}

{% block title %}Mes trajets propos√©s{% endblock %}

{% block body %}
{% set avisIds = [] %}
{% set avisIds = [] %}
{% for a in userAvis %}
  {% if a.covoiturage is not null %}
    {% set avisIds = avisIds|merge([a.covoiturage.id]) %}
  {% endif %}
{% endfor %}

<section class="section-box">
  <h2 class="text-center text-success mb-4">üöò Mes trajets en tant que conducteur</h2>

  {% if covoiturages is empty %}
    <p class="text-center text-muted">Aucun trajet propos√© pour l‚Äôinstant.</p>
  {% else %}
    <div class="table-responsive">
      <table class="table table-bordered table-striped align-middle text-center">
        <thead class="table-success">
          <tr>
            <th>Participants</th>
            <th>Date</th>
            <th>D√©part</th>
            <th>Arriv√©e</th>
            <th>Places restantes</th>
            <th>Statut</th>
            <th>Actions</th>
            <th>Avis re√ßus</th> {# ‚ûï NOUVELLE COLONNE #}
          </tr>
        </thead>
        <tbody>
          {% for c in covoiturages %}
            <tr>
              <td>
                {% if c.participants is empty %}
                  <span class="text-muted">Aucun</span>
                {% else %}
                  <ul class="list-unstyled mb-0">
                    {% for participant in c.participants %}
                      <li>{{ participant.username }}</li>
                    {% endfor %}
                  </ul>
                {% endif %}
              </td>
              <td>{{ c.dateDepart|date('d/m/Y') }}</td>
              <td>{{ c.lieuDepart }}</td>
              <td>{{ c.lieuArrivee }}</td>
              <td>{{ c.nbPlace }}</td>
              <td>
                <span class="badge 
                  {% if c.statut.value == 'DRAFT' %}bg-warning
                  {% elseif c.statut.value == 'PUBLISHED' %}bg-success
                  {% elseif c.statut.value == 'CANCELLED' %}bg-danger
                  {% elseif c.statut.value == 'TERMINE' %}bg-secondary
                  {% else %}bg-light
                  {% endif %}">
                  {{ c.statut.value|capitalize }}
                </span>
              </td>
              <td class="d-flex flex-column gap-1">
                {% if c.statut.value == 'DRAFT' %}
                  <a href="{{ path('covoiturage_covoiturage_demarrer', {'id': c.id}) }}" class="btn btn-outline-primary btn-sm">üö¶ D√©marrer</a>
                {% elseif c.statut.value == 'PUBLISHED' %}
                  <a href="{{ path('covoiturage_covoiturage_arriver', {'id': c.id}) }}" class="btn btn-outline-success btn-sm">‚úÖ Arriv√©e</a>
                {% endif %}

                <a href="{{ path('covoiturage_edit', {'id': c.id}) }}" class="btn btn-outline-primary btn-sm">‚úèÔ∏è</a>
                <a href="{{ path('covoiturage_delete', {'id': c.id}) }}" class="btn btn-outline-danger btn-sm"
                  onclick="return confirm('Es-tu s√ªr de vouloir supprimer ce trajet ?')">üóëÔ∏è</a>

                {% if c.statut.value == 'TERMINE' %}
                  {% if c.id not in avisIds %}
                    <a href="{{ path('avis_create', { 'id': c.id }) }}" class="btn btn-sm btn-outline-success">
                      üìù Donner un avis
                    </a>
                  {% else %}
                    <span class="badge bg-success">‚úîÔ∏è Avis donn√©</span>
                  {% endif %}
                {% endif %}
              </td>

              <td>
                {% set avisValides = c.getAvis|filter(v => v.statut == 'VALID√â') %}
                {% if avisValides is empty %}
                  <span class="text-muted small">Aucun</span>
                {% else %}
                  {% set total = 0 %}
                  {% for avis in avisValides %}
                    {% set total = total + avis.note %}
                  {% endfor %}
                  {% set moyenne = (total / avisValides|length)|number_format(1) %}
                  ‚≠ê {{ moyenne }}/5<br>
                  <small class="text-muted">({{ avisValides|length }} avis)</small>
                {% endif %}
              </td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
  {% endif %}
</section>
{% endblock %}
