{% extends 'base.html.twig' %}

{% block body %}

    <h1>List des covoiturage</h1>

   <h1 class="mb-4">🚗 Liste des covoiturages</h1>

        {% for covoiturage in covoiturages %}
        <a href="{{ path('covoiturage_show', {'id': covoiturage.id}) }}" class="text-decoration-none text-dark">
            <div class="card mb-3 p-3 shadow-sm hover-shadow-sm">
            <h5 class="mb-1">{{ covoiturage.lieuDepart }} → {{ covoiturage.lieuArrivee }}</h5>
            <p class="mb-0">
                <small>
                🗓️ {{ covoiturage.dateDepart|date('d/m/Y') }} à {{ covoiturage.heureDepart|date('H:i') }}<br>
                🚘 Voiture : {{ covoiturage.voiture.modele ?? 'Non spécifiée' }}<br>
                👤 Conducteur : {{ covoiturage.createdBy.firstname }} {{ covoiturage.createdBy.lastname }}
                </small>
            </p>
            </div>
        </a>
        {% else %}
        <p class="text-muted">Aucun covoiturage disponible.</p>
        {% endfor %}

{% endblock %} 