<header class="mb-3">
  <nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm">
    <div class="container-fluid">
      <a class="navbar-brand fw-bold" href="{{ path('index') }}">
        <span class="text-success">Eco</span>Ride
      </a>

      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain" aria-controls="navbarMain" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse justify-content-between" id="navbarMain">
        <ul class="navbar-nav mx-auto">
          {% if not app.user %}
            <li class="nav-item"><a class="nav-link" href="{{ path('covoiturage_list') }}">Covoiturages</a></li>
            <li class="nav-item"><a class="nav-link" href="{{ path('index') }}#avis">Avis</a></li>
            <li class="nav-item"><a class="nav-link" href="{{ path('index') }}#contact">Contact</a></li>
          {% endif %}
        </ul>

        <ul class="navbar-nav ms-auto">
          {% if app.user %}
            <div class="dropdown ms-auto">
              <button id="dropdownButton" class="btn btn-light dropdown-toggle d-flex align-items-center" aria-expanded="false">
                {% if app.user.photo %}
                  <img src="data:image/jpeg;base64,{{ app.user.photo|base64 }}" alt="Avatar" width="32" height="32" class="rounded-circle me-2">
                {% endif %}
                {{ app.user.firstname }} ({{ app.user.getCredit.amount ?? 0 }} crédits)
              </button>
              <div id="dropdownContent" class="dropdown-content">
                <a class="dropdown-item" href="{{ path('user_profile') }}">Mon profil</a>
                <hr class="dropdown-divider">
                <a class="dropdown-item" href="{{ path('user_reservations') }}">Mes réservations</a>
                <a class="dropdown-item" href="{{ path('user_trajets') }}">Mes trajets</a>
                {% if app.user.isConducteur %}
                  <hr class="dropdown-divider">
                  <a class="dropdown-item" href="{{ path('voiture_create') }}">Ajouter une voiture</a>
                  <a class="dropdown-item" href="{{ path('voiture_list') }}">Mes voitures</a>
                  <a class="dropdown-item" href="{{ path('covoiturage_create') }}">Proposer un trajet</a>
                {% endif %}
                {% if is_granted('ROLE_ADMIN') %}
                  <hr class="dropdown-divider">
                  <a class="dropdown-item text-danger" href="{{ path('admin_dashboard') }}">Espace Admin</a>
                {% endif %}
                <hr class="dropdown-divider">
                <a class="dropdown-item text-danger" href="{{ path('app_logout') }}">Déconnexion</a>
              </div>
            </div>
          {% else %}
            <li class="nav-item"><a class="nav-link" href="{{ path('app_login') }}">Connexion</a></li>
            <li class="nav-item"><a class="nav-link" href="{{ path('app_register') }}">Inscription</a></li>
          {% endif %}
        </ul>
      </div>
    </div>
  </nav>
</header>
