{% extends 'base.html.twig' %}

{% block body %}

    <h1>List des voiture</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Modele</th>
                <th>Immatriculation</th>
                <th>Energie</th>
            </tr>
        </thead>    
    
         <tbody>
            {% for voiture in voitures %}
                <tr>
                    <td>{{ voiture.model  }}</td>
                    <td>{{ voiture.Immatriculation  }}</td>
                    <td>
                        <a href="{{ path('voiture_show', {'id': voiture.id}) }}">Show</a>
                        <a href="{{ path('voiture_edit', {'id': voiture.id}) }}">Editer</a>
                        <a href="{{ path('voiture_delete', {'id': voiture.id}) }}">Supprimer</a>
                    </td>
                </tr>
             {% else %}
                <tr>
                    <td colspan="3">Aucun voiture trouv√©</td>
                </tr> 
            {% endfor %} 
        </tbody>
    </table>
{% endblock %} 